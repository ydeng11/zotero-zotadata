<?xml version="1.0"?>
<?xml-stylesheet href="chrome://global/skin/" type="text/css"?>

<dialog id="attachment-finder-preferences"
        title="Attachment Finder Preferences"
        xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul"
        windowtype="attachment-finder:preferences">

    <vbox>
        <groupbox>
            <caption label="API Settings"/>
            <grid>
                <columns>
                    <column/>
                    <column flex="1"/>
                </columns>
                <rows>
                    <row align="center">
                        <label value="Email for Unpaywall API:"/>
                        <textbox id="email-pref"
                                 preference="extensions.attachment-finder.email"/>
                    </row>
                    <row align="center">
                        <label value="CORE API Key (optional):"/>
                        <textbox id="core-api-key-pref"
                                 preference="extensions.attachment-finder.coreApiKey"/>
                    </row>
                </rows>
            </grid>
        </groupbox>

        <groupbox>
            <caption label="Auto-processing"/>
            <radiogroup id="autoretrieve-pref"
                        preference="extensions.attachment-finder.autoretrieve">
                <radio label="None" value="none"/>
                <radio label="Check attachments for new items" value="check"/>
                <radio label="Update metadata for new items" value="metadata"/>
                <radio label="Find files for new items" value="files"/>
            </radiogroup>
        </groupbox>
    </vbox>

    <script><![CDATA[
        // Initialize preferences
        window.addEventListener("load", function() {
            var emailPref = document.getElementById("email-pref");
            var corePref = document.getElementById("core-api-key-pref");
            var autoPref = document.getElementById("autoretrieve-pref");

            // Load current values
            emailPref.value = Zotero.Prefs.get("extensions.attachment-finder.email", true) || "";
            corePref.value = Zotero.Prefs.get("extensions.attachment-finder.coreApiKey", true) || "";
            autoPref.value = Zotero.Prefs.get("extensions.attachment-finder.autoretrieve", true) || "none";

            // Save on change
            emailPref.addEventListener("change", function() {
                Zotero.Prefs.set("extensions.attachment-finder.email", this.value, true);
            });

            corePref.addEventListener("change", function() {
                Zotero.Prefs.set("extensions.attachment-finder.coreApiKey", this.value, true);
            });

            autoPref.addEventListener("command", function() {
                Zotero.Prefs.set("extensions.attachment-finder.autoretrieve", this.value, true);
            });
        });
    ]]></script>
</dialog>
